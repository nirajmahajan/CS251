<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/titledialog"
        android:text="Add Node"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/messdialog"
        android:text="Edit here"
        android:textSize="20sp"
        android:layout_below="@id/titledialog"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <EditText
        android:id="@+id/titlebox"
        android:hint="Name"
        android:layout_below="@id/messdialog"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <EditText
        android:id="@+id/descriptionbox"
        android:hint="description"
        android:layout_below="@id/titlebox"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button
        android:id="@+id/datebox"
        android:text="Date"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionbox"
        android:layout_width="wrap_content"/>
    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>